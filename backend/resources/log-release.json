{
  "root_loggers": [
    {
      "levels": [
        "WARN",
        "ERROR"
      ],
      "format": "[{{module({})}}] {{level({\"colored\":true})}}: {{message({})}}",
      "targets": [
        {
          "type": "console"
        }
      ]
    }
  ],
  "loggers": [
    {
      "module": "nitro_repo",
      "levels": [
        "INFO",
        "WARN",
        "ERROR"
      ],
      "format": "[{{module({})}}] {{level({\"colored\":true})}}: {{message({})}}",
      "targets": [
        {
          "type": "console"
        }
      ]
    },
    {
      "module": "nitro_repo",
      "levels": [
        "INFO",
        "WARN",
        "ERROR"
      ],
      "format": "[{{module({})}}] {{level({})}}: {{message({})}}",
      "targets": [
        {
          "type": "file_logger",
          "properties": {
            "file": {
              "format": "{{env(LOG_LOCATION)}}/{{module({})}}.log",
              "placeholders": {
                "LOG_LOCATION": {
                  "key": "LOG_LOCATION",
                  "save": true
                }
              }
            }
          }
        }
      ]
    },
    {
      "module": "actix_web::middleware::logger",
      "levels": [
        "INFO",
        "WARN",
        "ERROR"
      ],
      "format": {
        "format": "[{{chrono(DATE_TIME)}}] {{level({})}}: {{message({})}}",
        "placeholders": {
          "DATE_TIME": {
            "format": "%Y-%m-%d %H:%M:%S"
          }
        }
      },
      "targets": [
        {
          "type": "file_logger",
          "properties": {
            "file": {
              "format": "{{env(LOG_LOCATION)}}/requests/request.log",
              "placeholders": {
                "LOG_LOCATION": {
                  "key": "LOG_LOCATION",
                  "save": true
                }
              }
            }
          }
        }
      ]
    }
  ]
}