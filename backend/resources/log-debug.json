{
  "root_loggers": [
    {
      "levels": [
        "DEBUG",
        "INFO",
        "WARN",
        "ERROR"
      ],
      "format": {
        "format": "[{{module({})}}] {{level(LEVEL_SETTINGS)}}: {{message({})}}",
        "placeholders": {
          "LEVEL_SETTINGS": {
            "colored": true
          }
        }
      },
      "targets": [
        {
          "type": "console"
        }
      ]
    }
  ],
  "loggers": [
    {
      "module": "nitro_repo",
      "levels": [
        "TRACE",
        "DEBUG",
        "INFO",
        "WARN",
        "ERROR"
      ],
      "format": {
        "format": "[{{module({})}}] {{level(LEVEL_SETTINGS)}}: {{message({})}}",
        "placeholders": {
          "LEVEL_SETTINGS": {
            "colored": true
          }
        }
      },
      "targets": [
        {
          "type": "console"
        }
      ]
    },
    {
      "module": "nitro_repo",
      "levels": [
        "TRACE",
        "DEBUG",
        "INFO",
        "WARN",
        "ERROR"
      ],
      "format": "[{{module({})}}] {{level({})}}: {{message({})}}",
      "targets": [
        {
          "type": "file_logger",
          "properties": {
            "file": {
              "format": "{{env(LOG_LOCATION)}}/{{module({})}}.log",
              "placeholders": {
                "LOG_LOCATION": {
                  "key": "LOG_LOCATION",
                  "save": true
                }
              }
            }
          }
        }
      ]
    }
  ]
}